@page "/documents"

@inject AuthenticationStateProvider AuthStateProvider
@inject DocumentExternalSystemServiceWEB DocumentExternalSystem

<title>Документы</title>

<div class="container">
    <div class="card mt-3 mb-3">
        <div class="card-header">
            <div class="row">
                <div class="col-sm">
                    <h3 class="m-0">Документы</h3>
                    <p class="m-0">Документы внешних учётных систем.</p>
                </div>
                <div class="col-sm d-flex align-items-center justify-content-end">
                    <AuthorizeView Roles="admin">
                        <Authorized>
                            <div class="row">
                                <div class="p-0 m-1 col-auto">
                                    <button type="button" class="btn btn-success" title="Добавить новый документ" data-bs-toggle="modal" data-bs-target="#addDocument"><b>+ Добавить</b></button>
                                </div>
                            </div>
                        </Authorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
        <div class="card-body pb-2 px-0 mb-0" style="overflow: scroll;">
            <TableView DocumentExternalSystemList="DocumentsExternal" TableHeader="TableHeaders" />
        </div>
        <div class="card-footer">
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addDocument" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addDocumentTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addDocumentTitle">Новый документ</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <EditForm Model="documentExternalDTO" FormName="AddDocument" Context="AddDocument" OnValidSubmit="AddDocument">
                            <div class="modal-body">
                                <DataAnnotationsValidator />

                                <!-- Alert -->
                                <div class="alert @ClassesAlert" role="alert">
                                    @ResponseMessage
                                </div>
                                <!-- End alert -->

                                <div class="form-group">
                                    <label for="title">Полное наименование</label>
                                    <InputText id="title" class="form-control" @bind-Value="documentExternalDTO.Title" />
                                    <ValidationMessage For="@(() => documentExternalDTO.Title)" />
                                </div>

                                <div class="form-group">
                                    <label for="shorttitle">Краткое наименование</label>
                                    <InputText id="shorttitle" class="form-control" @bind-Value="documentExternalDTO.ShortTitle" />
                                    <ValidationMessage For="@(() => documentExternalDTO.ShortTitle)" />
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" title="Отменить добавление документа" data-bs-dismiss="modal">Отмена</button>
                                <button type="submit" class="btn btn-success" title="Добавить новый документ" id="submit">Добавить</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
<!-- End modal -->

@code {
    private DocumentExternalSystemDTO documentExternalDTO = new();
    private List<DocumentExternalSystem> DocumentsExternal = new();
    private List<string> TableHeaders = ["Полное наименование", "Краткое наименование", ""];
    private string ResponseMessage = string.Empty;
    private string ClassesAlert = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await ((CustomAuthStateProvider)AuthStateProvider).GetAuthenticationStateAsync();
            DocumentsExternal = await DocumentExternalSystem.GetAllAsync();
        }
        catch (Exception ex) { }
    }

    private async Task AddDocument()
    {
        var response = await DocumentExternalSystem.AddAsync(documentExternalDTO);
        if (!response.Flag)
        {
            ResponseMessage = response.Message;
            ClassesAlert = "alert-warning";
        }
        else
        {
            ResponseMessage = response.Message;
            ClassesAlert = "alert-success";
            documentExternalDTO = new();
            DocumentsExternal = await DocumentExternalSystem.GetAllAsync();
        }
    }
}
