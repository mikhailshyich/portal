@page "/user-warehouses"

@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager navigationManager
@inject UserWarehouseServiceWEB userWarehouseService

<title>Склады сотрудников</title>

<div class="container">
    <div class="card mt-3 mb-3">
        <div class="card-header">
            <div class="row">
                <div class="col-sm">
                    <h3 class="m-0">Склады сотрудников</h3>
                    <p class="m-0">Таблица личных складов сотрудников.</p>
                </div>
                <div class="col-sm d-flex align-items-center justify-content-end">
                    <AuthorizeView Roles="admin">
                        <Authorized>
                            <div class="row">
                                <div class="p-0 m-1 col-auto">
                                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addUser"><b>+ Добавить</b></button>
                                </div>
                            </div>
                        </Authorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
        <div class="card-body pb-2 px-0 mb-0" style="overflow: scroll;">
            <TableView UserWarehouses="UserWarehouses" TableHeader="TableHeaders" />
        </div>
        <div class="card-footer">
        </div>
    </div>
</div>

