@code{
    private UserWarehouseDTO userWarehouseDTO = new();
    private List<UserWarehouse> UserWarehouses = new();
    private string ResponseMessage = string.Empty;
    private string ClassesAlert = string.Empty;
    private List<string> TableHeaders = ["Сотрудник", "Наименование", ""];

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await ((CustomAuthStateProvider)AuthStateProvider).GetAuthenticationStateAsync();
