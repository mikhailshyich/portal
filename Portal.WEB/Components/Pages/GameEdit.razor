@page "/edit/{Id:guid}"
@using Microsoft.AspNetCore.Authorization
@using Portal.WEB.Authentication
@using Portal.WEB.Services
@using Portal.Domain.Entities
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject GameService gameService
@inject NavigationManager navigationManager
@inject AuthenticationStateProvider AuthStateProvider

<h3>GameEdit</h3>
<AuthorizeView>
    <Authorized>
        <EditForm Model="Game" FormName="EditGame" Context="EditForm" OnValidSubmit="SaveEditGame">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label for="name">Название игры</label>
        <InputText id="name" class="form-control" @bind-Value="Game.Name" />
    </div>
    <div class="form-group">
        <label for="description">Описание</label>
        <InputText id="description" class="form-control" @bind-Value="Game.Description" />
    </div>
    <button type="submit" class="btn btn-success mt-3">Сохранить</button>
</EditForm>
    </Authorized>
</AuthorizeView>
        



@code {
    [Parameter]
    public Guid Id { get; set; }

    [CascadingParameter] protected Task<AuthenticationState> AuthStat { get; set; }

    private ClaimsPrincipal user = new();
    public Game Game = new();

    protected override async Task OnInitializedAsync()
    {
        var game = await gameService.GetGameByIdAsync(Id);
        Game = game;
    }

    private async Task SaveEditGame()
    {
        await ((CustomAuthStateProvider)AuthStateProvider).GetAuthenticationStateAsync();
        if (user.Identity is null || !user.Identity.IsAuthenticated)
        {
            navigationManager.NavigateTo("/login");
        }
        await gameService.EditGameAsync(Game);
        navigationManager.NavigateTo("/games");
    }
}
