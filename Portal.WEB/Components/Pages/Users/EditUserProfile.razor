@page "/users/edit/{Id:guid}"

@inject NavigationManager navigationManager
@inject UserServiceWEB userService
@inject UserDepartmentServiceWEB userDepartment

<EditForm Model="UserEdit" FormName="EditUser" Context="EditUser" OnValidSubmit="EditUser">
    <div class="container">
        <div class="card mt-3 mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm">
                        <h3 class="m-0">Редактирование сотрудника - <span class="text-uppercase fw-bold">@UserEdit.LastName @UserEdit.FirstName</span></h3>
                    </div>
                </div>
            </div>
            <div class="card-body pb-2 px-0 mb-0">
                <div class="container">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <!-- Alert -->
                        @* <div class="alert @ClassesAlert" role="alert">
                            @ResponseMessage
                        </div> *@
                        <!-- End alert -->

                        <div class="form-group">
                            <label for="userrole">Роль</label>
                        <InputSelect id="userrole" class="form-control" @bind-Value="UserEdit.UserRoleId">
                                <option value="">Выберите роль пользователя</option>
                                @foreach (UserRole role in UserRoles)
                                {
                                    <option value="@role.Id">@role.PublicTitle</option>
                                }
                            </InputSelect>
                        <ValidationMessage For="@(() => UserEdit.UserRoleId)" />
                        </div>

                        <div class="form-group">
                            <label for="userdepartment">Подразделение</label>
                        <InputSelect id="userdepartment" class="form-control" @bind-Value="UserEdit.UserDepartmentId">
                                <option value="">Выберите подразделение пользователя</option>
                                @foreach (UserDepartment department in UserDepartments)
                                {
                                    <option value="@department.Id">@department.Title</option>
                                }
                            </InputSelect>
                        <ValidationMessage For="@(() => UserEdit.UserDepartmentId)" />
                        </div>

                        <div class="form-group">
                            <label for="lastname">Фамилия</label>
                        <InputText id="lastname" class="form-control" @bind-Value="UserEdit.LastName" />
                        <ValidationMessage For="@(() => UserEdit.LastName)" />
                        </div>

                        <div class="form-group">
                            <label for="description">Имя</label>
                        <InputText id="description" class="form-control" @bind-Value="UserEdit.FirstName" />
                        <ValidationMessage For="@(() => UserEdit.FirstName)" />
                        </div>

                        <div class="form-group">
                            <label for="patronymic">Отчество</label>
                        <InputText id="patronymic" class="form-control" @bind-Value="UserEdit.Patronymic" />
                        </div>

                        <div class="form-group">
                        <label for="specialization">Должность</label>
                        <InputText id="specialization" class="form-control" @bind-Value="UserEdit.Specialization" />
                        </div>

                        <div class="form-group">
                            <label for="email" class="form-label">E-mail</label>
                        <InputText id="email" class="form-control" @bind-Value="UserEdit.Email" />
                        <ValidationMessage For="@(() => UserEdit.Email)" />
                        </div>

                        <div class="form-group">
                            <label for="newpassword" class="form-label">Новый пароль</label>
                        <InputText id="newpassword" type="password" class="form-control" @bind-Value="UserEdit.Password" />
                        <ValidationMessage For="@(() => UserEdit.Password)" />
                        </div>

                        <div class="form-group">
                        <label for="confirmPassword" class="form-label">Подтвердить пароль</label>
                        <InputText id="confirmPassword" type="password" class="form-control" @bind-Value="UserEdit.ConfirmPassword" />
                            <ValidationMessage For="@(() => UserEdit.ConfirmPassword)" />
                        </div>

                        <div class="form-check">
                        <InputCheckbox class="form-check-input" type="checkbox" @bind-value="UserEdit.IsActive" id="checkDefault" />
                            <label class="form-check-label" for="checkDefault">
                                Сотрудник активен
                            </label>
                        </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <button type="button" class="btn btn-danger" @onclick="Cancell">Отмена</button>
                        </div>
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success">Сохранить</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public Guid Id { get; set; }

    // private UserEdit UserEdit = new();
    private UserView User = new();
    private UserEdit UserEdit = new();
    private List<UserRole> UserRoles = new();
    private List<UserDepartment> UserDepartments = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            User = await userService.GetByIdAsync(Id);
            // User = await userService.GetByIdEditAsync(Id);
            UserRoles = await userService.GetAllUserRolesAsync();
            UserDepartments = await userDepartment.GetAllAsync();
            UserEdit.Id = User.Id;
            UserEdit.UserRoleId = User.UserRoleId;
            UserEdit.UserDepartmentId = User.UserDepartmentId;
            UserEdit.FirstName = User.FirstName;
            UserEdit.LastName = User.LastName;
            UserEdit.Patronymic = User.Patronymic;
            UserEdit.Specialization = User.Specialization;
            UserEdit.Email = User.Email;
            UserEdit.IsActive = User.IsActive;
        }
        catch(Exception ex)
        {

        }
    }
    private async Task EditUser()
    {
        try
        {
            await userService.EditUserAsync(UserEdit);
            navigationManager.NavigateTo($"/users", true);
        }
        catch(Exception ex){}
    }
    private void Cancell(MouseEventArgs args)
    {
        navigationManager.NavigateTo($"/users", true);
    }
}
