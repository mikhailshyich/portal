@page "/user/edit/{Id:guid}"

@inject NavigationManager navigationManager
@inject UserServiceWEB userService
@inject UserDepartmentServiceWEB userDepartment

<EditForm Model="User" FormName="EditUser" Context="EditUser" OnValidSubmit="EditUser">
    <div class="container">
        <div class="card mt-3 mb-3">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm">
                        <h3 class="m-0">Редактирование сотрудника - <span class="text-uppercase fw-bold">@User.LastName @User.FirstName</span></h3>
                    </div>
                </div>
            </div>
            <div class="card-body pb-2 px-0 mb-0">
                <div class="container">
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <!-- Alert -->
                        @* <div class="alert @ClassesAlert" role="alert">
                            @ResponseMessage
                        </div> *@
                        <!-- End alert -->

                        <div class="form-group">
                            <label for="userrole">Роль</label>
                            <InputSelect id="userrole" class="form-control" @bind-Value="User.UserRoleId">
                                <option value="">Выберите роль пользователя</option>
                                @foreach (UserRole role in UserRoles)
                                {
                                    <option value="@role.Id">@role.PublicTitle</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => User.UserRoleId)" />
                        </div>

                        <div class="form-group">
                            <label for="userdepartment">Подразделение</label>
                            <InputSelect id="userdepartment" class="form-control" @bind-Value="User.UserDepartmentId">
                                <option value="">Выберите подразделение пользователя</option>
                                @foreach (UserDepartment department in UserDepartments)
                                {
                                    <option value="@department.Id">@department.Title</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => User.UserDepartmentId)" />
                        </div>

                        <div class="form-group">
                            <label for="lastname">Фамилия</label>
                            <InputText id="lastname" class="form-control" @bind-Value="User.LastName" />
                            <ValidationMessage For="@(() => User.LastName)" />
                        </div>

                        <div class="form-group">
                            <label for="description">Имя</label>
                            <InputText id="description" class="form-control" @bind-Value="User.FirstName" />
                            <ValidationMessage For="@(() => User.FirstName)" />
                        </div>

                        <div class="form-group">
                            <label for="patronymic">Отчество</label>
                            <InputText id="patronymic" class="form-control" @bind-Value="User.Patronymic" />
                        </div>

                        <div class="form-group">
                            <label for="email" class="form-label">E-mail</label>
                            <InputText id="email" class="form-control" @bind-Value="User.Email" />
                            <ValidationMessage For="@(() => User.Email)" />
                        </div>

                        <div class="form-check">
                            <InputCheckbox class="form-check-input" type="checkbox" @bind-value="User.IsActive" id="checkDefault" />
                            <label class="form-check-label" for="checkDefault">
                                Сотрудник активен
                            </label>
                        </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <button type="button" class="btn btn-danger" @onclick="Cancell">Отмена</button>
                        </div>
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success">Сохранить</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>

@code {
    [Parameter]
    public Guid Id { get; set; }

    // private UserEdit UserEdit = new();
    private UserView User = new();
    private List<UserRole> UserRoles = new();
    private List<UserDepartment> UserDepartments = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            User = await userService.GetByIdAsync(Id);
            // User = await userService.GetByIdEditAsync(Id);
            UserRoles = await userService.GetAllUserRolesAsync();
            UserDepartments = await userDepartment.GetAllAsync();
        }
        catch(Exception ex)
        {

        }
    }
    private async Task EditUser()
    {
        try
        {
            await userService.EditUserAsync(User);
            navigationManager.NavigateTo($"/users", true);
        }
        catch(Exception ex){}
    }
    private void Cancell(MouseEventArgs args)
    {
        navigationManager.NavigateTo($"/users", true);
    }
}
