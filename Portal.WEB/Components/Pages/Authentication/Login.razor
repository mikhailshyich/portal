@page "/login"
@inject AuthenticationStateProvider AuthStateProvider
@inject AuthService authService
@inject NavigationManager navigationManager
@* @rendermode @(new InteractiveServerRenderMode(prerender: false)) *@

<h3>Login</h3>

<EditForm Model="loginModel" FormName="Login" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group">
        <label for="username">Имя пользователя</label>
        <InputText id="username" class="form-control" @bind-Value="loginModel.Username"/>
    </div>
    <div class="form-group">
        <label for="password">Пароль</label>
        <InputText type="password" id="password" class="form-control" @bind-Value="loginModel.Password" />
    </div>
    <button type="submit" class="btn btn-success mt-3">Войти</button>
</EditForm>

<div>@ExMessage</div>

@code {
    public LoginDTO loginModel = new();
    public string ExMessage = "";

    public async Task HandleLogin()
    {
        try
        {
            var result = await authService.LoginAsync(loginModel);
            if (result != null && result.Token != null)
            {
                await ((CustomAuthStateProvider)AuthStateProvider).MarkUserAsAuthenticated(result.Token);
                navigationManager.NavigateTo("/");
            }
        }
        catch(Exception ex)
        {
            ExMessage = ex.Message;
        }
    }
}
