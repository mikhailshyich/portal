@page "/departments"

@inject UserDepartmentServiceWEB userDepartmentService
@inject AuthenticationStateProvider AuthStateProvider

@rendermode @(new InteractiveServerRenderMode(prerender: false))

<title>Отделы</title>

<div class="container">
    <div class="card mt-3 mb-3">
        <div class="card-header">
            <div class="row">
                <div class="col-sm">
                    <h3 class="m-0">Отделы</h3>
                    <p class="m-0">Таблица отделов предприятия.</p>
                </div>
                <div class="col-sm d-flex align-items-center justify-content-end">
                    <AuthorizeView Roles="admin">
                        <Authorized>
                            <div class="row">
                                <div class="p-0 m-1 col-auto">
                                    <InputText class="form-control" @bind-value="SearchString" @oninput="SearchEvent" placeholder="Введите для поиска..." />
                                </div>
                                <div class="p-0 m-1 col-auto">
                                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addDepartment"><b>+ Добавить</b></button>
                                </div>
                            </div>
                        </Authorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
        <div class="card-body pb-2 px-0 mb-0" style="overflow: scroll;">
            <TableView UserDepartments="FilteredDepartmentsList" TableHeader="TableHeaders" />
        </div>
        <div class="card-footer">
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="addDepartment" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addDepartmentTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="addDepartmentTitle">Новый отдел</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <EditForm Model="DepartmentDTO" FormName="AddDepartment" Context="AddDepartment" OnValidSubmit="AddDepartment">
                            <div class="modal-body">
                                <DataAnnotationsValidator />

                                <!-- Alert -->
                                <div class="alert @ClassesAlert" role="alert">
                                    @ResponseMessage
                                </div>
                                <!-- End alert -->

                                <div class="form-group">
                                    <label for="title">Полное наименование</label>
                                    <InputText id="title" class="form-control" @bind-Value="DepartmentDTO.Title" />
                                    <ValidationMessage For="@(() => DepartmentDTO.Title)" />
                                </div>

                                <div class="form-group">
                                    <label for="shorttitle">Краткое наименование</label>
                                    <InputText id="shorttitle" class="form-control" @bind-Value="DepartmentDTO.ShortTitle" />
                                    <ValidationMessage For="@(() => DepartmentDTO.ShortTitle)" />
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Отмена</button>
                                <button type="submit" class="btn btn-success" id="submit">Добавить</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
<!-- End modal -->

@code {
    private List<UserDepartment> UserDepartments = new();
    private List<UserDepartment> FilteredDepartmentsList = new();
    private UserDepartmentDTO DepartmentDTO = new();
    private string SearchString { get; set; } = string.Empty;
    private string ResponseMessage = string.Empty;
    private string ClassesAlert = string.Empty;
    private List<string> TableHeaders = ["Полное наименование", "Краткое наименование", ""];

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await ((CustomAuthStateProvider)AuthStateProvider).GetAuthenticationStateAsync();
            if (authState.User.Identity.IsAuthenticated)
            {
                UserDepartments = await userDepartmentService.GetAllAsync();
                FilteredDepartmentsList.Clear();
                FilteredDepartmentsList = UserDepartments;
            }
        }
        catch (Exception ex) { }
    }

    private async Task AddDepartment()
    {
        var response = await userDepartmentService.AddAsync(DepartmentDTO);
        if (!response.Flag)
        {
            ResponseMessage = response.Message;
            ClassesAlert = "alert-warning";
        }
        else
        {
            ResponseMessage = response.Message;
            ClassesAlert = "alert-success";
            DepartmentDTO = new();
            UserDepartments = await userDepartmentService.GetAllAsync();
        }
    }
    private async Task SearchEvent(ChangeEventArgs args)
    {
        SearchString = args.Value.ToString();
        if (string.IsNullOrWhiteSpace(SearchString))
        {
            FilteredDepartmentsList = UserDepartments;
        }
        else
        {
            FilteredDepartmentsList = UserDepartments.Where(d => d.Title.Contains(SearchString, StringComparison.OrdinalIgnoreCase) ||
                                                                 d.ShortTitle.Contains(SearchString, StringComparison.OrdinalIgnoreCase)).ToList();
        }
    }
}
